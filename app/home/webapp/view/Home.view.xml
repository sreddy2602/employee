<mvc:View controllerName="ns.home.controller.Home"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:u="sap.ui.unified">
    <Page id="page" title="Academy" class="darkBlueGoldBackground fullHeight">
        <!-- First Header -->
        <customHeader>
            <Toolbar id="toolbarHeader" class="headerClass">
                <content>
                    <!-- Logo at the Start -->
               
                    <ToolbarSpacer id="_IDGenToolbarSpacer1" />
                    <!-- Title in the Center -->
                   
                    <Title id="titleAward" text="Employee" class="titleClass" />
                    <ToolbarSpacer id="_IDGenToolbarSpacer2" />
                   
                </content>
            </Toolbar>
        </customHeader>
        <ToolbarSpacer id="_IDGenToolbarSpacer21" /><ToolbarSpacer id="_IDGenToolbarSpacer211" /><ToolbarSpacer id="_IDGenToolbarSpacer2111" /><ToolbarSpacer id="_IDGenToolbarSpacer21111" />
        <ToolbarSpacer id="_IDGenToolbarSpacer222" /><ToolbarSpacer id="_IDGenToolbarSpacer211222" /><ToolbarSpacer id="_IDGenToolbarSpacer2111222" />
        <ToolbarSpacer id="_IDGenToolbarSpacer211112222" />
        <ToolbarSpacer id="_IDGenToolbarSpacer212" />
        <ToolbarSpacer id="_IDGenToolbarSpacer213" />
        <ToolbarSpacer id="_IDGenToolbarSpacer214" />
        <ToolbarSpacer id="_IDGenToolbarSpacer215" />
        <ToolbarSpacer id="_IDGenToolbarSpacer217" />
        <ToolbarSpacer id="_IDGenToolbarSpacer216" />
        <ToolbarSpacer id="_IDGenToolbarSpacer218" />
        <ToolbarSpacer id="_IDGenToolbarSpacer219" />
 
        <!-- Content Section -->
        <content>
            <Table id="employeeTable" inset="true" items="{/Employees}" class="tableClass fullHeight">
                <headerToolbar>
                    <Toolbar id="_IDGenToolbar1" class="headerToolbarClass">
                        <Title id="_IDGenTitle" text="Employee Details" class="headerTitleClass" />
                    </Toolbar>
                </headerToolbar>
                <columns>
                    <Column id="_IDGenColumn">
                        <Text id="_IDGenText" text="Employee ID" class="columnHeaderClass" />
                    </Column>
                    <Column id="_IDGenColumn1">
                        <Text id="_IDGenText1" text="Employee Name" class="columnHeaderClass" />
                    </Column>
                    <Column id="_IDGenColumn2">
                        <Text id="_IDGenText2" text="Location" class="columnHeaderClass" />
                    </Column>
                    <Column id="_IDGenColumn3">
                        <Text id="_IDGenText3" text="Experience" class="columnHeaderClass" />
                    </Column>
                    <Column id="_IDGenColumn4">
                        <Text id="_IDGenText4" text="Performance" class="columnHeaderClass" />
                    </Column>
                    <Column id="_IDGenColumn5">
                        <Text id="_IDGenText5" text="Qualification" class="columnHeaderClass" />
                    </Column>
                    <Column id="_IDGenColumn6">
                        <Text id="_IDGenText6" text="Age" class="columnHeaderClass" />
                    </Column>
                    <Column id="_IDGenColumn7">
                        <Text id="_IDGenText7" text="Domain" class="columnHeaderClass" />
                    </Column>
                    <Column id="_IDGenColumnView" hAlign="End" >
                        <Text id="_IDGenTextView" text="Action"/>
                    </Column>
                </columns>
                <items>
                    <ColumnListItem id="_IDGenColumnListItem"  class="columnListItemClass">
                        <cells>
                            <Text id="_IDGenText8" text="{employeeID}" class="cellTextClass" />
                            <Text id="_IDGenText9" text="{employeeName}" class="cellTextClass" />
                            <Text id="_IDGenText10" text="{location}" class="cellTextClass" />
                            <Text id="_IDGenText11" text="{experience}" class="cellTextClass" />
                            <Text id="_IDGenText12" text="{performance}" class="cellTextClass" />
                            <Text id="_IDGenText13" text="{qualification}" class="cellTextClass" />
                            <Text id="_IDGenText14" text="{age}" class="cellTextClass" />
                            <Text id="_IDGenText15" text="{domain}" class="cellTextClass" />
                            <Button id="_IDGenButtonView" text="View" press="onViewDetails" />
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </content>
    </Page>
</mvc:View>
 