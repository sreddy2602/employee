<mvc:View controllerName="ns.home.controller.firstPage"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:m="sap.m"
    xmlns:core="sap.ui.core"
    xmlns="sap.uxap"
    xmlns:u="sap.ui.unified">
 
    <ObjectPageLayout id="ObjectPageLayout"
        showTitleInHeaderContent="true"
        upperCaseAnchorBar="false">
 
        <!-- Header Title Section -->
        <headerTitle>
            <ObjectPageDynamicHeaderTitle id="_IDGenObjectPageDynamicHeaderTitle1">
               
                <expandedHeading>
                    <m:Title id="_IDGenTitle1" text="Employee Details" wrapping="true"/>
                </expandedHeading>
 
                <snappedHeading>
                    <m:HBox id="_IDGenHBox">
                        <m:VBox id="_IDGenVBox">
                            <m:Avatar id="_IDGenAvatar" src="./test-resources/sap/uxap/images/imageID_275314.png" class="sapUiSmallMarginEnd"/>
                        </m:VBox>
 
                        <m:VBox id="_IDGenVBox1">
                            <m:Title id="_IDGenTitle2" text="Object Page Header with Links, Rating Indicator, and Object Status" wrapping="true"/>
                            <m:Label id="_IDGenLabel" text="Example of an ObjectPage with header facet"/>
                        </m:VBox>
                    </m:HBox>
                </snappedHeading>
 
                <expandedContent>
                    <m:Label id="_IDGenLabel1" text="--LTIMindtree"/>
                </expandedContent>
 
                <snappedTitleOnMobile>
                    <m:Title id="_IDGenTitle3" text="Object Page Header with Links, Rating Indicator, and Object Status"/>
                </snappedTitleOnMobile>
 
                <actions>
                    <m:Button id="_IDGenButton" text="Edit" type="Emphasized"/>
                    <m:Button id="_IDGenButton1" text="Delete"/>
                    <m:Button id="_IDGenButton2" text="Copy"/>
                    <m:OverflowToolbarButton id="_IDGenOverflowToolbarButton" icon="sap-icon://action" type="Transparent" text="Share" tooltip="Action"/>
                </actions>
 
            </ObjectPageDynamicHeaderTitle>
        </headerTitle>
 
        <!-- Header Content Section -->
        <headerContent>
            <m:ToolbarSpacer id="id123"></m:ToolbarSpacer>
            <m:FlexBox id="_IDGenFlexBox1" wrap="Wrap" fitContainer="true">
                <m:Avatar id="_IDGenAvatar1" src="./test-resources/sap/uxap/images/imageID_275314.png" class="sapUiMediumMarginEnd" displaySize="L"/>
 
                <m:VBox id="_IDGenVBox2" class="sapUiLargeMarginEnd sapUiSmallMarginBottom">
                    <m:Title id="_IDGenTitle4" class="sapUiTinyMarginBottom">
                        <m:Link id="_IDGenLink" text="Employee Details" press="onEmployeeProfilePress"/>
                       
                    </m:Title>
                    <m:HBox id="_IDGenHBox1" class="sapUiTinyMarginBottom" renderType="Bare">
                        <m:Label id="_IDGenLabel2" text="Employee Name:" class="sapUiTinyMarginEnd"/>
                       
                    </m:HBox>
                    <m:HBox id="_IDGenHBox2" class="sapUiTinyMarginBottom" renderType="Bare">
                        <m:Label id="_IDGenLabel3" text="Employee ID:" class="sapUiTinyMarginEnd"/>
                       
                    </m:HBox>
                    <m:HBox id="_IDGenHBox3">
                        <m:Label id="_IDGenLabel4" text="Role :" class="sapUiTinyMarginEnd"/>
                       
                    </m:HBox>
                    <m:HBox id="_IDGenHBox333">
                        <m:Label id="_IDGenLabel334" text="Experience :" class="sapUiTinyMarginEnd"/>
                       
                    </m:HBox>
                </m:VBox>
               
                <m:VBox id="_IDGenVBox3" class="sapUiLargeMarginEnd sapUiSmallMarginBottom">
                    <m:Title id="_IDGenTitle5" text="Contact Info" class="sapUiTinyMarginBottom"/>
                    <m:HBox id="_IDGenHBox4" class="sapUiTinyMarginBottom">
                        <core:Icon id="_IDGenIcon" src="sap-icon://account"/>
                       
                    </m:HBox>
                    <m:HBox id="_IDGenHBox5" class="sapUiTinyMarginBottom">
                        <core:Icon id="_IDGenIcon1" src="sap-icon://outgoing-call"/>
                       
                    </m:HBox>
                    <m:HBox id="_IDGenHBox6">
                        <core:Icon id="_IDGenIcon2" src="sap-icon://email"/>
                        <m:Link id="_IDGenLink3"  class="sapUiSmallMarginBegin"/>
                    </m:HBox>
                </m:VBox>
 
                <m:VBox id="_IDGenVBox4" class="sapUiLargeMarginEnd sapUiSmallMarginBottom">
                    <m:Title id="_IDGenTitle6" text="Project Details" class="sapUiTinyMarginBottom"/>
                    <m:HBox id="_IDGenHBox7" class="sapUiTinyMarginBottom">
                        <m:Label id="_IDGenLabel5" text="Project Name:" class="sapUiSmallMarginEnd"/>
                       
                    </m:HBox>
                    <m:HBox id="_IDGenHBox8" class="sapUiTinyMarginBottom">
                        <m:Label id="_IDGenLabel6" text="Reporting Manager:" class="sapUiSmallMarginEnd"/>
                       
                    </m:HBox>
                    <m:HBox id="_IDGenHBox9">
                        <m:Label id="_IDGenLabel7" text="Team-Lead Name:" class="sapUiSmallMarginEnd"/>
                       
                    </m:HBox>
                </m:VBox>
                    <m:VBox id="_IDGenVBox6" class="sapUiLargeMarginEnd sapUiSmallMarginBottom">
                    <m:Title id="_IDGenTitle7"  text="Product Description" class="sapUiTinyMarginBottom" />
                    <m:Text id="_IDGenText16"  width="320px" text="Top-design high-quality coffee mug - ideal for a comforting moment; Pack: 6; material: Porcelain - durable dishwasher and microwave-safe porcelain that cleans easily and is ideal for everyday service. Comes in two bright colors."/>
                </m:VBox>
               
 
               
 
            </m:FlexBox>
        </headerContent>
 
    </ObjectPageLayout>
 
</mvc:View>
 