    xmlns:core="sap.ui.core"
    xmlns="sap.uxap"
    xmlns:u="sap.ui.unified">
 
    <ObjectPageLayout id="ObjectPageLayout"
        showTitleInHeaderContent="true"
        upperCaseAnchorBar="false">
 
        <!-- Header Title Section -->
       <headerTitle>
            <ObjectPageDynamicHeaderTitle id="_IDGenObjectPageDynamicHeaderTitle1">
               
                <expandedHeading>
                    <m:Title id="_IDGenTitle1" text="Employee Details" wrapping="true"/>
                </expandedHeading>
 
                <snappedHeading>
                    <m:HBox id="_IDGenHBox">
                        <m:VBox id="_IDGenVBox">
                            <m:Avatar id="_IDGenAvatar" src="./test-resources/sap/uxap/images/imageID_275314.png" class="sapUiSmallMarginEnd"/>
                        </m:VBox>
 
                        <m:VBox id="_IDGenVBox1">
                            <m:Title id="_IDGenTitle2" text="Employee Details" wrapping="true"/>
                            <m:Label id="_IDGenLabel" text="LTIMindtree"/>
                        </m:VBox>
                    </m:HBox>
                </snappedHeading>
 
                <expandedContent>
                    <m:Label id="_IDGenLabel1" text="LTIMindtree"/>
                </expandedContent>
 
                <snappedTitleOnMobile>
                    <m:Title id="_IDGenTitle3" text="LTIMindtree"/>
                </snappedTitleOnMobile>
 
                <actions>
                    <m:Button id="_IDGenButton" text="Edit"/>
                    <m:Button id="_IDGenButton1" text="Delete"/>
                    <m:Button id="_IDGenButton2" text="Copy"/>
                    <m:Button id="_IDGenButton211" text="Back to home" press="onBackToHome"/>
                    <m:OverflowToolbarButton id="_IDGenOverflowToolbarButton" icon="sap-icon://action" type="Transparent" text="Share" tooltip="Action" press="onSharePress"/>
                    <m:Button id="_IDGenButton3" text="Go to Dashboard" press="onNavigateToDashboard"/>
                </actions>
 
            </ObjectPageDynamicHeaderTitle>
        </headerTitle>
 
        <!-- Header Content Section -->
        <headerContent>
            <m:ToolbarSpacer id="id123"></m:ToolbarSpacer>
            <m:FlexBox id="_IDGenFlexBox1" wrap="Wrap" fitContainer="true">
                <m:Avatar id="_IDGenAvatar1" src="./images/Prat_img.jpg" class="sapUiMediumMarginEnd" displaySize="XL"/>
 
                <m:VBox id="_IDGenVBox2" class="sapUiLargeMarginEnd sapUiSmallMarginBottom">
                    <m:Title id="_IDGenTitle4" class="sapUiTinyMarginBottom">
                        <m:Link id="_IDGenLink" text="Employee Details" press="onEmployeeProfilePress"/>    
                    </m:Title>
                    <m:HBox id="_IDGenHBox1" class="sapUiTinyMarginBottom" renderType="Bare">
                        <m:Label id="_IDGenLabel2" text="Employee Name:{StudentDetail>/employeeName}" class="sapUiTinyMarginEnd"/>  
                    </m:HBox>
                    <m:HBox id="_IDGenHBox2" class="sapUiTinyMarginBottom" renderType="Bare">
                        <m:Label id="_IDGenLabel3" text="Employee ID:{StudentDetail>/employeeID}" class="sapUiTinyMarginEnd"/>
                    </m:HBox>
                    <m:HBox id="_IDGenHBox3">
                        <m:Label id="_IDGenLabel4" text="Role :" class="sapUiTinyMarginEnd"/>  
                    </m:HBox>
                    <m:HBox id="_IDGenHBox333">
