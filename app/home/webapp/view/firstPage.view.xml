                    </m:HBox>
                </m:VBox>
                <m:VBox id="_IDGenVBox3" class="sapUiLargeMarginEnd sapUiSmallMarginBottom">
                    <m:Title id="_IDGenTitle5" text="Contact " class="sapUiTinyMarginBottom"/>
                    <m:HBox id="_IDGenHBox4" class="sapUiTinyMarginBottom">
                        <core:Icon id="_IDGenIcon" src="sap-icon://account"/>  
                    </m:HBox>
                    <m:HBox id="_IDGenHBox5" class="sapUiTinyMarginBottom">
                        <core:Icon id="_IDGenIcon1" src="sap-icon://outgoing-call"/>  
                    </m:HBox>
                    <m:HBox id="_IDGenHBox6">
                        <core:Icon id="_IDGenIcon2" src="sap-icon://email"/>
