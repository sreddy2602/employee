                    <m:Label id="_IDGenLabel8" text="6 Reviews"/>
                    <m:RatingIndicator id="_IDGenRatingIndicator" value="4" iconSize="16px" />
                    <m:Text id="_IDGenText208" text="4.0 out of 5"/>
                   
                </m:VBox>
            </m:FlexBox>
